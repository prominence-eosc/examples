{
  "artifacts": [
    {
      "url": "https://github.com/lammps/lammps/archive/stable_12Dec2018.tar.gz"
    }
  ],
  "resources": {
    "nodes": 2,
    "cpus": 4,
    "memory": 4,
    "disk": 10
  },
