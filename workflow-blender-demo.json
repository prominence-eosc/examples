{
  "name":"create-render-movie",
  "storage":{
    "type":"b2drop",
    "mountpoint":"/data",
    "b2drop":{
      "app-username":"<username>",
      "app-password":"<password>"
    }
  },
  "jobs":[
    {
      "name":"render-frames",
      "resources":{
        "cpus":4,
        "memory":4,
        "disk":10
      },
      "artifacts":[
        "https://download.blender.org/demo/test/classroom.zip"
      ],
      "tasks":[
        {
          "image":"ikester/blender:latest",
          "cmd":"classroom/classroom.blend -o /data/frame_### -f $(ProminenceJobInstanceId)",
          "runtime":"udocker"
        }
      ]
    },
    {
      "name":"create-movie",
      "resources":{
        "cpus":1,
        "memory":1,
        "disk":10
      },
      "tasks":[
        {
          "image":"jrottenberg/ffmpeg:3.4-alpine",
          "cmd":"-framerate 24 -i frame_%03d.png movie-blender-classroom.mp4",
          "runtime":"udocker",
          "workdir":"/data"
        },
        {
          "image":"busybox",
          "cmd":"rm -f /data/frame_*.png",
          "runtime":"udocker"
        }
      ]
    }
  ],
  "dependencies":[
    {
      "parents":[
        "render-frames"
      ],
      "children":[
        "create-movie"
      ]
    }
  ]
}
